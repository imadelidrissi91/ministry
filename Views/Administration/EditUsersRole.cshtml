@model List<AdministrationEditUsersRoleViewModel>
@{
    ViewBag.title = "edit role users ";
}



<form method="post">
    <div class="card">
        <div class="card-body">
            <input hidden disabled value="@ViewBag.roleid" />
            @for (int i = 0; i < Model.Count; i++)
            {
                var uniquename = "User" + i;
                <div class="form-check">
                    <input hidden asp-for="@Model[i].UserID" />
                    <input hidden asp-for="@Model[i].NameUser" />

                    <input asp-for="@Model[i].IsSelected" id="@uniquename" class="form-check-input" />
                    <label for="@uniquename">@Model[i].NameUser</label>
                </div>
            }
        </div>
            <div class="card-footer">
                <a asp-action="UpdateRole" asp-route-id="@ViewBag.roleid" class="btn btn-primary">back to role</a>
                <button class="btn btn-success">submit</button>
                <br />

                <div asp-validation-summary="All" class=" text-danger"></div>
            </div>
        </div>
</form>






