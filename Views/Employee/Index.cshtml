
@model IEnumerable<Employee>;

@{

    ViewBag.Title = "list of employees";
}
<div class="alert alert-info">List employees</div>

<div class="row">
    @{
        foreach (Employee item in Model)
        {

            <div class="">
                <div class="card">

                    <div class="card-body">
                        <img asp-append-version="true"  src="Images/@item.Photo" width="250" height="400" alt="Card image cap">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Email</p>
                        <div class="text-white">
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Employee" asp-route-id="@item.Id">Detail</a>
                            <a asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                            <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>


@section CssEmployee {
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment include="Staging,Production">
        
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        
    </environment>

}
